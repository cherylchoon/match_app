
<h3>Please set your preferences</h3>
<p><i>*remember, you can always go back later and edit them!*</i></p>
<hr>
<div class="col-md-4">
  <%= form_for @preferences do |f| %>

    <div class="form-group">
      <%= f.label "Minimum Height:" %>
      <%= f.select :min_height, options_for_select(Choices['height']) %>
    </div>

    <div class="form-group">
      <%= f.label "Maximum Height:" %>
      <%= f.select :max_height, options_for_select(Choices['height']) %>
    </div>

    <div class="form-group">
      <%= f.label "Minimum Age:" %>
      <%= f.select :min_age, options_for_select((18..100).step(1).to_a.map{|s| ["#{s}", s]}) %>
    </div>

    <div class="form-group">
      <%= f.label "Maximum Age:" %>
      <%= f.select :max_age, options_for_select((18..100).step(1).to_a.map{|s| ["#{s}", s]}) %>
    </div>

    <div class="form-group">
      <%= f.label "Gender:" %>
      <%= f.select :gender, options_for_select(Choices['gender']) %>
    </div>

    <div class="form-group">
      <%= f.label "Body Type:" %>
      <%= f.select :body_type, options_for_select(Choices['body_type']), {}, class: "float-right" %>
    </div>
    <div class="form-group">
      <%= f.label "Relationship Status:" %>
      <%= f.select :status, options_for_select(Choices['relationship_status']), {}, class: "float-right" %>
    </div>
    <div class="form-group">
      <%= f.label "Has kids?" %>
      <%= f.select :has_kids, options_for_select(Choices['has_kids']) %>
    </div>
    <div class="form-group">
      <%= f.label "Wants kids?" %>
      <%= f.select :wants_kids, options_for_select(Choices['wants_kids']) %>
    </div>
    <div class="form-group">
      <%= f.label "Highest level of education:" %>
      <%= f.select :education, options_for_select(Choices['education']) %>
    </div>
    <div class="form-group">
      <%= f.label "Smoker?" %>
      <%= f.select :smoking, options_for_select(Choices['is_smoker']) %>
    </div>
    <div class="form-group">
      <%= f.label "Drinker?" %>
      <%= f.select :drinking, options_for_select(Choices['is_drinker']) %>
    </div>
    <div class="form-group">
        <%= f.label "Preferred Ethnicities:" %><br />
        <%= f.collection_check_boxes :ethnicity_ids, Ethnicity.all, :id, :name do |b| %>
      <div class="collection-check-box">
        <%= b.check_box %>
        <%= b.label %>
      </div>
    <% end %>
    </div>
    <div class="form-group">
      <%= f.label "Preferred Religions:" %><br />
      <%= f.collection_check_boxes :religion_ids, Religion.all, :id, :name do |c| %>
    <div class="collection-check-box">
      <%= c.check_box %>
      <%= c.label %>
    </div>
      <% end %>
    </div>
    <div class="form-group">
      <%= f.label "Preferred Salary:" %>
      <%= f.select :salary, options_for_select(Choices['salary_range']) %>
    </div>
    <%= submit_tag("Set your LOVE preferences!") %>
  <% end %>
</div>
