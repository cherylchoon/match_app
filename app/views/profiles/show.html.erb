<a href="/">Return to Dashboard</a>

<h1>Your Profile, <%= @user.first_name %></h1>

<hr>

<h5>Height: <%= @profile.height%></h5>
<h5>Body Type: <%= @profile.body_type%></h5>
<h5>Relationship Status: <%= @profile.status%></h5>
<h5>Have Kids?: <%= @profile.has_kids%></h5>
<h5>Want Kids?: <%= @profile.wants_kids%></h5>
<h5>Education: <%= @profile.education%></h5>
<h5>Smoker?: <%= @profile.smoking%></h5>
<h5>Drinker?: <%= @profile.drinking%></h5>
<h5>Ethnicity: </h5>
<% @profile.ethnicities.each do |e| %>
  <h5> -- <%= e.name %></h5>
<% end %>
<h5>Religions:</h5>
<% @profile.religions.each do |r| %>
    <h5> ** <%= r.name %></h5>
<% end %>
<h5>Current Salary Range: Around <%= @profile.salary%> per year</h5>
<h5>Interests: </h5>
<% @profile.interests.each do |i| %>
  <h5> + <%= i.name %></h5>
<% end %>
<h5>Specifications: <%= @profile.specifications%></h5>
<h5>Essay: <%= @profile.essay%></h5>

<hr>
<a href="/profiles/<%= @user.id %>/edit">Edit Your Profile</a>
