<div class="container">

  <div class="col-md-4">
    <h4>Update your information</h4>

    <% if flash[:message] %>
      <p class="text-success"><%= flash[:message] %></p>
    <%end%>

    <%= form_for @user do |f| %>
      <div class="form-group">
        <%= f.label "First name: " %>
        <%= f.text_field :first_name, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label "Last name: " %>
        <%= f.text_field :last_name, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label "Email: " %>
        <%= f.text_field :email, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label "Birthday: " %>
        <%= f.date_field :birthday, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label "Gender: " %>
        <%= f.select :gender, options_for_select(gender_types), {}, {class: "form-control"} %>
      </div>
      <div class="form-group">
        <%= f.label "Zip code: " %>
        <%= f.text_field :zip_code, class: "form-control" %>
      </div>
      <%= f.submit "Update your profile", class: 'btn btn-outline-info float-right' %>
    <%end%>
  </div>


